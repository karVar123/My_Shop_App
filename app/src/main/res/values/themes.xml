<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Karen_Shop_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="logIn_sign_in_style">
        <item name="android:textColor">#161826</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>


    <style name="logIn_sign_field_in_style">
        <item name="android:textColor">#7B7B7B</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="profilePhotoShape">
        <item name="cornerSize">50%</item>
    </style>

    <style name="profileFieldsNameStyle">
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textColor">#040402</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>